generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  phone      String  @unique
  name       String
  telegramId String?
}

model Invoice {
  id String @id @default(cuid())
}

model Contract {
  id  String @id @default(cuid())
  url String

  contractId              Int
  userId                  Int
  logo                    String
  urlHash                 String
  docId                   String
  currencySymbol          String
  languageCode            String
  issueDate               String
  dueDate                 String
  PONumber                String
  fromName                String
  fromEmail               String
  toName                  String
  toEmail                 String
  toPhone                 String
  toAddress               String
  services                String
  bankDetails             String
  additionalInfo          String
  companyPromoInfoPhone   String
  companyPromoInfoEmail   String
  companyPromoInfoWebPage String
  tax                     Int
  discount                Int
  total                   Int
  subtotal                Int
  balance_due             Int
  paidDate                String
  paidAmount              Int
  isExpense               Boolean
}
